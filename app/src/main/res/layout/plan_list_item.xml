<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plan_item"
    android:layout_height="100dp"
    android:layout_width="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/plan_list_item_time"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:gravity="end"
        android:text="6:00"
        android:textSize="18sp"
        android:textColor="@color/myBlackLight"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/circle_10"/>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/plan_list_item_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:elevation="0.3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/plan_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nihaohahhhhhhhhhhhhhh"
                android:textSize="20sp"
                android:maxLength="14"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/plan_list_item_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/example1_2"
                android:singleLine="true"
                android:maxLength="20"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/myBlack"/>
            <TextView
                android:id="@+id/plan_list_item_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/example1_3"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/myBlack"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>